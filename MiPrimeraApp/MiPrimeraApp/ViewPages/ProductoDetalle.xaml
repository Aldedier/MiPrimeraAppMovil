<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Titulo}"
             x:Class="MiPrimeraApp.ViewPages.ProductoDetalle">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Nombre"/>
            <Entry Text="{Binding oClsProducto.Nombre}" />

            <Label Text="Precio"/>
            <Entry Keyboard="Numeric" Text="{Binding oClsProducto.Precio}" />

            <Label Text="Categoria"/>
            <Picker Title="Seleccione una categoria" 
                    ItemsSource="{Binding ListaCategoria}"
                    SelectedItem="{Binding oClsProducto.NombreCategoria}"
                    />

            <Label Text="Stock"/>
            <Entry Keyboard="Numeric" Text="{Binding oClsProducto.Stock}" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Aceptar" x:Name="btnGuardarProducto" Clicked="btnGuardarProducto_Clicked" BackgroundColor="Green"/>
                <Button Text="Regresar" x:Name="btnRegresarProducto" Clicked="btnRegresarProducto_Clicked" BackgroundColor="Red"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>